<menu
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="mae.comp3717.bcit.ca.bankingapp.AcctSummaryActivity">

    <!-- Messages will always display - if logged in -->
    <item android:id="@+id/action_messages"
        android:icon="@drawable/ic_mail_white_48dp"
        android:title="@string/action_messages"
        app:showAsAction="always"
        />

    <!-- Branch locator will display always -->
    <item android:id="@+id/action_locate_branch"
        android:icon="@drawable/ic_location_searching_white_48dp"
        android:title="@string/action_search"
        app:showAsAction="always"
        />

    <!-- About Us -->
    <item android:id="@+id/action_about"
        android:title="@string/title_activity_about"
        app:showAsAction="never"
        />

    <!-- News -->
    <item android:id="@+id/action_news"
        android:title="@string/title_activity_news"
        app:showAsAction="never"
        />

    <!-- Rates -->
    <item android:id="@+id/action_rates"
        android:title="@string/title_activity_rates"
        app:showAsAction="never"
        />

    <!-- Search -->
    <item android:id="@+id/action_search"
        android:icon="@drawable/ic_search_white_48dp"
        android:title="@string/action_search"
        app:showAsAction="never"
        />

    <!-- Settings -->
    <item
        android:id="@+id/action_settings"
        android:title="@string/action_settings"
        android:orderInCategory="100"
        app:showAsAction="never"
        />

    <!-- Signout -->
    <item android:id="@+id/action_signout"
        android:title="@string/action_sign_out"
        app:showAsAction="never"
        />
</menu>
